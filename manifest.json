{
  "manifest_version": 3,
  "name": "Pinterest Wizard",
  "version": "1.1",
  "description": "Generate titles and descriptions for your Pinterest pins using AI.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}